<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dikamon.Pages.MyKitchenPage"
             xmlns:vm="clr-namespace:Dikamon.ViewModels"
             xmlns:services="clr-namespace:Dikamon.Services"
             x:DataType="vm:MyKitchenViewModel"
             Title="Konyhám">

    <ContentPage.Resources>
        <services:ImageSourceConverter x:Key="ImageSourceConverter" />
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*"
          BackgroundColor="{StaticResource MainColor}"
          Padding="20">

        <!-- Header -->
        <StackLayout Grid.Row="0" 
                    Orientation="Horizontal" 
                    HorizontalOptions="Start"
                    Spacing="10"
                    Margin="0,10,0,20">
            <Image Source="fridgebuddy_chef.png" 
                  WidthRequest="40" 
                  HeightRequest="40" />
            <Label Text="DiKAMON" 
                  FontFamily="Tiny5" 
                  FontSize="24"
                  VerticalOptions="Center" />
        </StackLayout>

        <!-- Main content -->
        <Grid Grid.Row="1" 
             RowDefinitions="Auto,*">

            <!-- Title and Search Bar -->
            <Grid Grid.Row="0" 
                 RowDefinitions="Auto,Auto"
                 Margin="0,0,0,20">

                <Label Grid.Row="0"
                      Text="Konyhám" 
                      FontFamily="Tiny5" 
                      FontSize="28" 
                      HorizontalOptions="Center"
                      Margin="0,0,0,15"/>
            </Grid>

            <!-- Food Category Cards - Now using CollectionView for dynamic categories -->
            <RefreshView Grid.Row="1"
                        IsRefreshing="{Binding IsRefreshing}"
                        Command="{Binding RefreshCommand}">
                <CollectionView ItemsSource="{Binding FoodCategories}"
                              ItemsLayout="VerticalGrid, 2"
                              EmptyView="Kategóriák betöltése...">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="vm:FoodCategoryViewModel">
                            <Frame BackgroundColor="Transparent"
                                  Padding="0"
                                  Margin="5,5,5,15"
                                  HasShadow="False"
                                  BorderColor="Transparent"
                                  CornerRadius="15">
                                <Grid RowDefinitions="*,Auto">
                                    <Image Grid.Row="0"
                                          Source="{Binding ImageUrl, Converter={StaticResource ImageSourceConverter}}"
                                          Aspect="AspectFill"
                                          HeightRequest="120"/>
                                    <Label Grid.Row="1"
                                          Text="{Binding Name}"
                                          FontFamily="Tiny5"
                                          FontSize="18"
                                          TextColor="White"
                                          BackgroundColor="#26283b"
                                          HorizontalTextAlignment="Center"
                                          Padding="5"/>
                                </Grid>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MyKitchenViewModel}}, Path=SelectCategoryCommand}" 
                                                         CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </Grid>
    </Grid>
</ContentPage>