<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dikamon.Pages.AfterLoginMainPage"
             Title="DiKAMON">

    <Grid RowDefinitions="Auto,*" 
          Padding="20">

        <!-- Welcome Header with Personalized Greeting -->

        <Grid Grid.Row="0" 
      RowDefinitions="Auto"
      BackgroundColor="#8080CEF5"
      Margin="-20,-20,-20,20"
      Padding="15,20,15,20">

            <!-- Main Header Content  -->
            <Grid ColumnDefinitions="Auto,*">

                <!-- App Icon/Logo  -->
                <Image Grid.Column="0"
               Source="fridgebuddy.png" 
               WidthRequest="50" 
               HeightRequest="50"
               Margin="0,0,10,0"
               VerticalOptions="Center"/>

                <!-- Text Container -->
                <StackLayout Grid.Column="1" 
                     VerticalOptions="Center"
                     HorizontalOptions="FillAndExpand"
                     Spacing="2">

                    <!-- User Greeting  -->
                    <Label Text="{Binding UserName, StringFormat='Szervusz, {0}!'}" 
                  FontFamily="Tiny5" 
                  FontSize="22" 
                  TextColor="#26283b"
                  LineBreakMode="WordWrap"/>

                    <!-- App Description  -->
                    <Label Text="DiKA vagyok, a te Digitális Konyhai Asszisztensed." 
                  FontFamily="Tiny5" 
                  FontSize="14" 
                  TextColor="#26283b"
                  LineBreakMode="WordWrap"/>
                </StackLayout>
            </Grid>
        </Grid>

        <!-- Main Content -->
        <ScrollView Grid.Row="1">
            <StackLayout Spacing="20">

                <!-- Kitchen Management Section -->
                <Frame BackgroundColor="White" 
                       CornerRadius="10" 
                       Padding="15" 
                       HasShadow="True">
                    <StackLayout>
                        <StackLayout Orientation="Horizontal" 
                                     Margin="0,0,0,10">
                            <Label Text="Menedzseld a konyhád!" 
                                   FontFamily="Tiny5" 
                                   FontSize="22" 
                                   TextColor="#26283b" 
                                   VerticalOptions="Center"/>
                            <Image Source="fridgebuddy_chef.png" 
                                   WidthRequest="30" 
                                   HeightRequest="30" 
                                   HorizontalOptions="EndAndExpand"/>
                        </StackLayout>

                        <Label Text="• Virtuális konyhádban tárolhatod élelmiszereidet. Nézd meg a valódi konyhád tartalmát és menedzseld élelmiszereidet."
                               FontSize="14" 
                               Margin="0,5"/>

                        <Label Text="• Ha nem tudnád milyen terméket vannak otthon, itt bármikor rá nézhetsz."
                               FontSize="14" 
                               Margin="0,5"/>

                        <Button Text="Nyisd meg" 
                                BackgroundColor="#FFEE58" 
                                TextColor="Black" 
                                CornerRadius="8" 
                                HeightRequest="50" 
                                Margin="0,10,0,0"
                                Command="{Binding GoToMyKitchenCommand}"/>
                    </StackLayout>
                </Frame>

                <!-- Recipes Section -->
                <Frame BackgroundColor="White" 
                       CornerRadius="10" 
                       Padding="15" 
                       HasShadow="True">
                    <StackLayout>
                        <StackLayout Orientation="Horizontal" 
                                     Margin="0,0,0,10">
                            <Label Text="Egyszerű receptek kezdőknek!" 
                                   FontFamily="Tiny5" 
                                   FontSize="22" 
                                   TextColor="#26283b" 
                                   VerticalOptions="Center"/>
                            <Image Source="fridgebuddy_chef.png" 
                                   WidthRequest="30" 
                                   HeightRequest="30" 
                                   HorizontalOptions="EndAndExpand"/>
                        </StackLayout>

                        <Label Text="• Nem vagy Gordon Ramsay? Ne félj, a tehetsěges fejlesztőink több egyszerű és gyors receptet írtak számodra!"
                               FontSize="14" 
                               Margin="0,5"/>

                        <Label Text="• A receptek csak olyan élelmiszereket tartalmaznak, amelyeket DiKA-ban tudsz tárolni vagy könnyen beszerezhető"
                               FontSize="14" 
                               Margin="0,5"/>

                        <Label Text="• Tehát mire vársz? Még tudod csinálni, főzzünk/süssünk együtt!"
                               FontSize="14" 
                               Margin="0,5"/>

                        <Button Text="Recept könyv" 
                                BackgroundColor="#90CAF9" 
                                TextColor="Black" 
                                CornerRadius="8" 
                                HeightRequest="50" 
                                Margin="0,10,0,0"
                                Command="{Binding GoToRecipesCommand}"/>
                    </StackLayout>
                </Frame>

                <!-- Logout Button -->
                <Button Text="Kijelentkezés" 
                        BackgroundColor="#FF5252" 
                        TextColor="White" 
                        CornerRadius="8" 
                        HeightRequest="50" 
                        Margin="0,20,0,0"
                        Command="{Binding LogoutCommand}"/>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>