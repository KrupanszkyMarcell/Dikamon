<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dikamon.Pages.CategoryItemsPage"
             xmlns:vm="clr-namespace:Dikamon.ViewModels"
             xmlns:model="clr-namespace:Dikamon.Models"
             x:DataType="vm:CategoryItemsViewModel"
             Title="{Binding CategoryName}">

    <Grid RowDefinitions="Auto,*"
          BackgroundColor="{StaticResource MainColor}"
          Padding="20">

        <!-- Header -->
        <StackLayout Grid.Row="0" 
                    Orientation="Horizontal" 
                    HorizontalOptions="Start"
                    Spacing="10"
                    Margin="0,10,0,20">
            <Image Source="fridgebuddy_chef.png" 
                  WidthRequest="40" 
                  HeightRequest="40" />
            <Label Text="DiKAMON" 
                  FontFamily="Tiny5" 
                  FontSize="24"
                  VerticalOptions="Center" />
        </StackLayout>

        <!-- Main content -->
        <Grid Grid.Row="1" 
             RowDefinitions="Auto,Auto,*,Auto">

            <!-- Category Title -->
            <Label Grid.Row="0"
                  Text="{Binding CategoryName}" 
                  FontFamily="Tiny5" 
                  FontSize="28" 
                  HorizontalOptions="Center"
                  Margin="0,0,0,15"/>

            <!-- Search Bar -->
            <Frame Grid.Row="1"
                  BackgroundColor="White" 
                  CornerRadius="10" 
                  Padding="10" 
                  Margin="0,0,0,20">
                <Grid ColumnDefinitions="*,Auto">
                    <Entry Grid.Column="0"
                          Placeholder="Keresés..." 
                          PlaceholderColor="Gray"
                          Text="{Binding SearchText}"
                          VerticalOptions="Center" />
                    <ImageButton Grid.Column="1" 
                                Source="search_icon.png" 
                                WidthRequest="20" 
                                HeightRequest="20"
                                BackgroundColor="Transparent"
                                Command="{Binding SearchCommand}"
                                VerticalOptions="Center" />
                </Grid>
            </Frame>

            <!-- Items List -->
            <RefreshView Grid.Row="2"
                        IsRefreshing="{Binding IsRefreshing}" 
                        Command="{Binding RefreshCommand}">
                <CollectionView ItemsSource="{Binding CategoryItems}"
                              EmptyView="Nincsenek elemek ebben a kategóriában">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:Stores">
                            <Frame Margin="0,5" 
                                  Padding="10" 
                                  CornerRadius="10" 
                                  BackgroundColor="White">
                                <Grid ColumnDefinitions="Auto,*,Auto" 
                                     RowDefinitions="Auto,Auto">
                                    <!-- Item Image -->
                                    <Image Grid.Row="0" 
                                          Grid.RowSpan="2" 
                                          Grid.Column="0"
                                          Source="{Binding StoredItem.Image}" 
                                          WidthRequest="60" 
                                          HeightRequest="60"
                                          Margin="0,0,10,0"/>

                                    <!-- Item Name -->
                                    <Label Grid.Row="0" 
                                          Grid.Column="1"
                                          Text="{Binding StoredItem.Name}" 
                                          FontAttributes="Bold" 
                                          FontSize="16"/>

                                    <!-- Item Quantity with unit -->
                                    <Label Grid.Row="1" 
                                          Grid.Column="1"
                                          FontSize="14" 
                                          TextColor="Gray">
                                        <Label.Text>
                                            <MultiBinding StringFormat="{}{0} {1}">
                                                <Binding Path="Quantity" />
                                                <Binding Path="StoredItem.Unit" TargetNullValue="db" />
                                            </MultiBinding>
                                        </Label.Text>
                                    </Label>

                                    <!-- Control Buttons -->
                                    <StackLayout Grid.Row="0" 
                                                Grid.RowSpan="2" 
                                                Grid.Column="2" 
                                                Orientation="Horizontal" 
                                                VerticalOptions="Center">
                                        <Button Text="-" 
                                              WidthRequest="40" 
                                              HeightRequest="40" 
                                              CornerRadius="20"
                                              BackgroundColor="#FFEE58"
                                              TextColor="Black"
                                              Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CategoryItemsViewModel}}, Path=DecrementCommand}"
                                              CommandParameter="{Binding}"/>

                                        <Button Text="+" 
                                              WidthRequest="40" 
                                              HeightRequest="40" 
                                              CornerRadius="20"
                                              Margin="5,0,0,0"
                                              BackgroundColor="#90CAF9"
                                              TextColor="Black"
                                              Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CategoryItemsViewModel}}, Path=IncrementCommand}"
                                              CommandParameter="{Binding}"/>
                                    </StackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>

            <!-- Add Button -->
            <Button Grid.Row="3"
                   Text="Új termék hozzáadása" 
                   BackgroundColor="#FFEE58" 
                   TextColor="Black"
                   CornerRadius="10"
                   Margin="0,10,0,0"
                   Command="{Binding AddItemCommand}"/>
        </Grid>
    </Grid>
</ContentPage>