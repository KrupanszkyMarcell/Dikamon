<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dikamon.Pages.MainPage"
             >


    <Grid RowDefinitions="Auto,*,Auto"
          Padding="20">

        <!-- Header with logo and title -->
        <StackLayout Grid.Row="0" 
                     Orientation="Horizontal" 
                     HorizontalOptions="Start"
                     Spacing="10"
                     Margin="0,10,0,20">
            <Image Source="fridgebuddy_chef.png" 
                   WidthRequest="40" 
                   HeightRequest="40" />
            <Label Text="DiKAMON" 
                   FontFamily="Tiny5" 
                   FontSize="24"
                   VerticalOptions="Center" />
        </StackLayout>

        <!-- Main content area -->
        <Grid Grid.Row="1" 
              RowDefinitions="*,Auto,Auto"
              Margin="0,20">

            <!-- Refrigerator character -->
            <Image Grid.Row="0" 
                   Source="fridgebuddy.png" 
                   WidthRequest="150" 
                   HeightRequest="150"
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" />

            <!-- Welcome text -->
            <StackLayout Grid.Row="1" 
                         Spacing="10" 
                         Margin="0,20">
                <Label Text="Szervusz, ismeretlen!" 
                       FontFamily="Tiny5" 
                       FontSize="24" 
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />

                <Label Text="DiKA vagyok, a te Digitális Konyhai Asszisztensed." 
                       FontFamily="Tiny5" 
                       FontSize="16" 
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />
            </StackLayout>

            <!-- Buttons container -->
            <StackLayout Grid.Row="2" 
                         Spacing="15" 
                         Margin="0,30,0,0">
                <Frame CornerRadius="10" 
                       HasShadow="False" 
                       Padding="15" 
                       BackgroundColor="White">
                    <StackLayout>
                        <Button Text="Bejelentkezés" 
                                FontFamily="Tiny5" 
                                BackgroundColor="#FFEE58" 
                                TextColor="Black"
                                CornerRadius="8"
                                Margin="0,5"
                                HeightRequest="50"
                                 />

                        <Button Text="Regisztráció" 
                                FontFamily="Tiny5" 
                                BackgroundColor="#90CAF9" 
                                TextColor="Black"
                                CornerRadius="8"
                                Margin="0,10,0,5"
                                HeightRequest="50"
                               />
                    </StackLayout>
                </Frame>
            </StackLayout>
        </Grid>

        <!-- Footer -->
        <Label Grid.Row="2" 
               Text="© 2025 Dikamon" 
               FontSize="12" 
               TextColor="Gray"
               HorizontalOptions="Center" />
    </Grid>
</ContentPage>
