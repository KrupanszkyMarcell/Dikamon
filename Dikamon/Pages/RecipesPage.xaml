<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dikamon.Pages.RecipesPage"
             xmlns:vm="clr-namespace:Dikamon.ViewModels"
             xmlns:model="clr-namespace:Dikamon.Models"
             xmlns:services="clr-namespace:Dikamon.Services"
             x:DataType="vm:RecipesViewModel"
             Title="Receptek">

    <ContentPage.Resources>
        <services:ImageSourceConverter x:Key="ImageSourceConverter" />
        <services:GreaterThanOneConverter x:Key="GreaterThanOneConverter" />
        <services:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        <services:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*"
          BackgroundColor="{StaticResource MainColor}"
          Padding="20">

        <!-- Header with brown background -->
        <Grid Grid.Row="0" 
              BackgroundColor="#AD9163"
              RowDefinitions="Auto,Auto,Auto"
              Margin="-20,-20,-20,20"
              Padding="20,20,20,20">

            <!-- Title -->
            <Label Grid.Row="0"
                   Text="Receptek" 
                   FontFamily="Tiny5" 
                   FontSize="38" 
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   TextColor="White"/>

            <!-- Subtitle -->
            <Label Grid.Row="1"
                   Text="Egyszerű receptek neked" 
                   FontFamily="Tiny5" 
                   FontSize="22" 
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   TextColor="White"
                   Margin="0,5,0,20"/>

            <!-- Filter and Search -->
            <Grid Grid.Row="2" 
                  ColumnDefinitions="*,*"
                  ColumnSpacing="15">

                <!-- Recipe Type Filter -->
                <Frame Grid.Column="0"
                       BackgroundColor="White" 
                       CornerRadius="10" 
                       Padding="5" 
                       HasShadow="False">
                    <Grid ColumnDefinitions="Auto,*">
                        <Label Grid.Column="0"
                               Text="Típus" 
                               FontFamily="Tiny5"
                               FontSize="14"
                               VerticalOptions="Center"
                               Margin="10,0,0,0"/>

                        <Picker Grid.Column="1"
                                ItemsSource="{Binding RecipeTypes}"
                                SelectedItem="{Binding SelectedRecipeType}"
                                Title="Válassz típust"
                                FontFamily="OpenSansRegular"
                                Margin="5,0,0,0"
                                SelectedIndexChanged="RecipeType_Changed" />
                    </Grid>
                </Frame>

                <!-- Search Bar -->
                <Frame Grid.Column="1"
                       BackgroundColor="White" 
                       CornerRadius="10" 
                       Padding="5" 
                       HasShadow="False">
                    <Grid ColumnDefinitions="*,Auto">
                        <Entry Grid.Column="0"
                               Placeholder="Keresés..."
                               PlaceholderColor="Gray"
                               Text="{Binding SearchText}"
                               ReturnCommand="{Binding SearchRecipesCommand}"
                               ReturnType="Search"
                               FontFamily="OpenSansRegular"/>

                        <ImageButton Grid.Column="1"
                                    Source="search_icon.png"
                                    Command="{Binding SearchRecipesCommand}"
                                    WidthRequest="24"
                                    HeightRequest="24"
                                    BackgroundColor="Transparent"
                                    Margin="0,0,5,0"/>
                    </Grid>
                </Frame>
            </Grid>
        </Grid>

        <!-- Main content with recipes -->
        <Grid Grid.Row="1" 
              RowDefinitions="*,Auto">

            <!-- Recipe Items visible when not loading -->
            <RefreshView Grid.Row="0"
                        IsRefreshing="{Binding IsRefreshing}" 
                        Command="{Binding RefreshCommand}"
                        IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}">
                <CollectionView ItemsSource="{Binding Recipes}"
                              EmptyView="Nem találhatóak adatok!">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:Recipes">
                            <Frame Margin="0,0,0,15" 
                                  Padding="0" 
                                  CornerRadius="15" 
                                  BackgroundColor="White"
                                  HasShadow="True">
                                <Grid>
                                    <!-- Recipe Image -->
                                    <Image Source="{Binding Image, Converter={StaticResource ImageSourceConverter}}"
                                          Aspect="AspectFill"
                                          HeightRequest="200" />

                                    <!-- Recipe Information -->
                                    <StackLayout VerticalOptions="End">
                                        <Grid BackgroundColor="#FFFFFF" 
                                              Padding="10">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <!-- Recipe Name -->
                                            <Label Grid.Row="0"
                                                  Text="{Binding Name}"
                                                  FontFamily="Tiny5"
                                                  FontSize="20"
                                                  TextColor="Black"
                                                  Margin="0,0,0,5" />

                                            <!-- Recipe Metadata -->
                                            <Grid Grid.Row="1"
                                                  ColumnDefinitions="Auto,*,Auto">

                                                <!-- Preparation Time -->
                                                <StackLayout Grid.Column="0"
                                                            Orientation="Horizontal"
                                                            Spacing="5">
                                                    <Label Text="{Binding Time, StringFormat='{0} perc'}"
                                                          FontSize="14"
                                                          VerticalOptions="Center" />
                                                </StackLayout>

                                                <!-- Recipe Badges (Type) -->
                                                <StackLayout Grid.Column="2"
                                                            Orientation="Horizontal"
                                                            Spacing="5"
                                                            HorizontalOptions="End">
                                                    <Frame BackgroundColor="#FFEE58"
                                                          CornerRadius="12"
                                                          Padding="8,3"
                                                          HasShadow="False"
                                                          IsVisible="{Binding Type, Converter={StaticResource StringNotEmptyConverter}}">
                                                        <Label Text="ETY"
                                                              FontSize="12"
                                                              TextColor="Black"
                                                              FontAttributes="Bold" />
                                                    </Frame>

                                                    <Frame BackgroundColor="#90CAF9"
                                                          CornerRadius="12"
                                                          Padding="8,3"
                                                          HasShadow="False">
                                                        <Label Text="{Binding Type}"
                                                              FontSize="12"
                                                              TextColor="Black"
                                                              FontAttributes="Bold" />
                                                    </Frame>
                                                </StackLayout>
                                            </Grid>
                                        </Grid>
                                    </StackLayout>
                                </Grid>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:RecipesViewModel}}, Path=ViewRecipeDetailsCommand}"
                                                        CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>

            <!-- Loading indicator - on top when visible -->
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                              IsVisible="{Binding IsLoading}"
                              HorizontalOptions="Center"
                              VerticalOptions="Center"
                              Color="#FFEE58"
                              Scale="2"/>

            <!-- Pagination controls -->
            <Grid Grid.Row="1" 
                  ColumnDefinitions="Auto,*,Auto"
                  Margin="0,10,0,0">

                <!-- Previous Page Button -->
                <Button Grid.Column="0"
                        Text="&lt;"
                        BackgroundColor="#26283b"
                        TextColor="White"
                        CornerRadius="20"
                        WidthRequest="40"
                        HeightRequest="40"
                        Padding="0"
                        Command="{Binding PreviousPageCommand}"
                        IsEnabled="{Binding CurrentPage, Converter={StaticResource GreaterThanOneConverter}}"/>

                <!-- Page Indicator -->
                <Label Grid.Column="1"
                       Text="{Binding CurrentPage, StringFormat='{0}'}"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontFamily="Tiny5"
                       FontSize="18"
                       TextColor="White"/>

                <!-- Next Page Button -->
                <Button Grid.Column="2"
                        Text="&gt;"
                        BackgroundColor="#26283b"
                        TextColor="White"
                        CornerRadius="20"
                        WidthRequest="40"
                        HeightRequest="40"
                        Padding="0"
                        Command="{Binding NextPageCommand}"
                        IsEnabled="{Binding CanGoToNextPage}"/>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>